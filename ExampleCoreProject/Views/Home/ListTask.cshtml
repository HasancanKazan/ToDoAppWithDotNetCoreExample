@*@model IEnumerable<ExampleCoreProject.Models.Task>*@
@model List<ExampleCoreProject.Models.Task>

@{
    ViewData["Title"] = "ListTask";
}
<style>
    table.dataTable thead .sorting:after,
    table.dataTable thead .sorting:before,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting_asc:before,
    table.dataTable thead .sorting_asc_disabled:after,
    table.dataTable thead .sorting_asc_disabled:before,
    table.dataTable thead .sorting_desc:after,
    table.dataTable thead .sorting_desc:before,
    table.dataTable thead .sorting_desc_disabled:after,
    table.dataTable thead .sorting_desc_disabled:before {
        bottom: .5em;
    }
</style>

<table id="selectedColumn" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Yapılacak İş
            </th>
            <th class="th-sm">
                İş Detayı
            </th>
            <th class="th-sm">
                Kim Tarafından Yapılacak
            </th>
            <th class="th-sm">
                Teslim Tarihi
            </th>
            <th class="th-sm">
                Taslak mı?
            </th>
            <th class="th-sm">
                Oluşturulma Tarihi
            </th>
            <th class="th-sm">
                Oluşturan Kişi
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskSign)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDraft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreUser)
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th class="th-sm">
                Yapılacak İş
            </th>
            <th class="th-sm">
                İş Detayı
            </th>
            <th class="th-sm">
                Kim Tarafından Yapılacak
            </th>
            <th class="th-sm">
                Teslim Tarihi
            </th>
            <th class="th-sm">
                Taslak mı?
            </th>
            <th class="th-sm">
                Oluşturulma Tarihi
            </th>
            <th class="th-sm">
                Oluşturan Kişi
            </th>
        </tr>
    </tfoot>
</table>

